version: '2'

services:
  mongodb:
    environment:
      - ALLOW_EMPTY_PASSWORD=yes
      - MONGODB_USERNAE=admin
      - MONGODB_PASSWORD=
      - MONGODB_DATABASE=nucampsite
    image: docker.io/bitnami/mongodb:4.2
    ports:
      - "27017:27017"
    volumes:
      - 'mongodb_data:/bitnami/mongodb'
      - './data/db:/data/db'

volumes:
  mongodb_data:
    driver: local

